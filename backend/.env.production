# Production Environment Variables for Heroku
# Set these in Heroku dashboard: Settings > Config Vars

NODE_ENV=production

# Database (Heroku PostgreSQL addon provides DATABASE_URL automatically)
# DATABASE_URL=<auto-provided-by-heroku>

# JWT Secrets (CHANGE THESE!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3000
CLIENT_URL=https://your-app-name.herokuapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SFTP Configuration (Optional - for subscription sync)
ENABLE_SFTP_SYNC=false
SFTP_HOST=
SFTP_PORT=22
SFTP_USERNAME=
SFTP_PASSWORD=
SFTP_REMOTE_PATH=/subscriptions
SFTP_SYNC_INTERVAL=*/15 * * * *

# Logging
LOG_LEVEL=info

# Mapon GPS Tracking API
MAPON_API_KEY=b6a5ce738b76b134d06e8b072a754918019a9ed7
