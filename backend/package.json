{
  "name": "mailia-backend",
  "version": "1.0.0",
  "description": "Backend server for Mailia delivery tracking system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "dev:old": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "npm run build && npm run migrate:prod",
    "migrate": "psql -d mailia_db -f database/schema.sql",
    "migrate:prod": "tsx scripts/migrate.ts || true",
    "setup:heroku": "tsx scripts/setup-heroku-db.ts",
    "import:csv": "tsx scripts/import-csv.ts",
    "create:admin": "tsx scripts/create-admin.ts",
    "create:user": "tsx scripts/create-user.ts",
    "remove:duplicates": "tsx scripts/remove-duplicates.ts",
    "reimport:circuit": "tsx scripts/reimport-circuit.ts",
    "check:circuits": "tsx scripts/check-circuits.ts",
    "diagnostics:circuits": "tsx scripts/diagnostics-circuits.ts",
    "sftp:sync": "tsx src/services/sftpSync.ts"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "keywords": [
    "delivery",
    "tracking",
    "real-time",
    "sftp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "ssh2-sftp-client": "^10.0.3",
    "winston": "^3.11.0",
    "typescript": "^5.3.3",
    "tsx": "^4.20.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "@types/ssh2-sftp-client": "^9.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0"
  }
}
