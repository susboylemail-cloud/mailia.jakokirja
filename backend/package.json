{
  "name": "mailia-backend",
  "version": "1.0.0",
  "description": "Backend server for Mailia delivery tracking system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "psql -d mailia_db -f database/schema.sql",
    "import:csv": "ts-node scripts/import-csv.ts",
    "create:admin": "ts-node scripts/create-admin.ts",
    "sftp:sync": "ts-node src/services/sftpSync.ts"
  },
  "keywords": [
    "delivery",
    "tracking",
    "real-time",
    "sftp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "socket.io": "^4.6.1",
    "ssh2-sftp-client": "^10.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.15.6",
    "@types/ssh2-sftp-client": "^9.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
