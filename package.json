{
  "name": "mailia-delivery-tracker",
  "version": "1.0.0",
  "description": "Mailia delivery tracking system for Imatra postal circuits",
  "scripts": {
    "build": "npm run build:css && npm run build:js && cd backend && npm install && npm run build",
    "build:css": "csso style.css -o style.min.css",
    "build:js": "terser app.js -o app.min.js -c -m && terser api.js -o api.min.js -c -m",
    "start": "cd backend && npm start",
    "postinstall": "cd backend && npm install",
    "serve": "http-server -p 5500 .",
    "test:e2e": "playwright test",
    "ci": "npm run serve & sleep 2 && npm run test:e2e",
    "scan:duplicates": "node scripts/find-duplicates.js",
    "remediate:duplicates": "node scripts/remediate-duplicates.js"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "keywords": [
    "delivery",
    "tracking"
  ],
  "author": "Mailia",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "autoprefixer": "^10.4.22",
    "csso-cli": "^4.0.2",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "terser": "^5.44.1"
  },
  "main": "api.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "playwright": "^1.56.1",
    "playwright-core": "^1.56.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/susboylemail-cloud/mailia.jakokirja.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/susboylemail-cloud/mailia.jakokirja/issues"
  },
  "homepage": "https://github.com/susboylemail-cloud/mailia.jakokirja#readme"
}
